{
  "name": "gg",
  "displayName": "GG",
  "description": "GG",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "activationEvents": [
    "onView:ggView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "scm": [
        {
          "id": "ggView",
          "name": "GG"
        }
      ]
    },
    "commands": [
      {
        "command": "gg.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "gg.updateBranchMap",
        "title": "Update Branch Map",
        "icon": "$(book)"
      },      
      {
        "command": "gg.commitAll",
        "title": "Commit All",
        "icon": "$(check-all)"
      },
      {
        "command": "gg.pushAll",
        "title": "Push All",
        "icon": "$(broadcast)"
      },      
      {
        "command": "gg.openFile",
        "title": "Open File"
      },
      {
        "command": "gg.showDiff",
        "title": "Show Diff",
        "icon": "$(diff)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "gg.refresh",
          "when": "view == ggView",
          "group": "navigation"
        },
        {
          "command": "gg.commitAll",
          "group": "navigation"
        },
        {
          "command": "gg.pushAll",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "gg.openFile",
          "when": "view == ggView",
          "group": "inline"
        },
        {
          "command": "gg.showDiff",
          "when": "view == ggView",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.60.0",
    "@vscode/test-electron": "^2.2.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.8.4"
  }
}